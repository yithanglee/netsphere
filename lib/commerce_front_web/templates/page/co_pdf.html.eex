.text-sm {
  font-size: 0.8rem;
}

.text-lg {
  font-size: 24px;
}

.text-xl {
  font-size: 32px;
}

.collapsed {
  height: 0px !important;
}

.w-120 {
  width: 120px;
}

.w-80 {
  width: 80px;
}

.w-72 {
  width: 72px;
}

.w-64 {
  width: 64px;
}

.w-16 {
  width: 64px;
}

